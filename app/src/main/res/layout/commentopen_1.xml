<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"


    android:background="@drawable/heart_yellow_bg">

    <LinearLayout
        android:id="@+id/home_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/notifications"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"


            android:textAlignment="center"
            android:src="@drawable/ic_close"/>


        <TextView
            android:id="@+id/followings"
            android:layout_width="wrap_content"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:text="@string/reply_to_comment"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:textAlignment="center"
            android:textColor="@color/tab_selected"/>

        <TextView
            android:id="@+id/new_arrival"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="@string/send"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@drawable/tab_select_bg"
            android:layout_gravity="center_vertical"/>



    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edt_commentopen_hint"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:background="@color/white"/>

</LinearLayout>
