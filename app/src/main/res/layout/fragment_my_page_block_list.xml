<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MyPageBlockList_Fragment"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_top_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:elevation="5sp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:src="@mipmap/back"
            android:layout_marginLeft="10sp"/>


        <TextView
            android:id="@+id/tv_profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_selected"
            android:layout_centerVertical="true"
            android:textSize="14sp"

            android:text="@string/block_list"
            android:layout_centerHorizontal="true"></TextView>

    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_blocked_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_bg"></android.support.v7.widget.RecyclerView>



</LinearLayout>