<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Resume_Key_Fragment"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rel_top_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="15sp"
        android:paddingBottom="15sp"
        android:elevation="5sp">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="10sp"
            android:layout_height="20sp"
            android:src="@mipmap/back"
            android:layout_marginLeft="10sp"/>


        <TextView
            android:id="@+id/tv_profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_selected"
            android:layout_centerVertical="true"
            android:textSize="14sp"

            android:text="@string/resume_key"
            android:layout_centerHorizontal="true"></TextView>







    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5sp"
        android:padding="10sp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send resume Key to your email address\nSend resume Key to your email address \n Send resume Key to your email address "
        android:gravity="center"
        android:textSize="14sp"
        android:padding="10sp"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Email Address"
            android:padding="10sp"
            android:textSize="14sp"
            android:layout_marginBottom="5sp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/small_yellow_round_corner_bg"
            android:padding="10sp"
            android:hint="mail@example.com"
            android:layout_marginBottom="10sp"
            android:textSize="14sp"
            android:inputType="textEmailAddress"
            android:singleLine="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send to my Email"
            android:background="@drawable/tab_select_bg"
            android:textColor="@color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="45sp"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Resume Key"
            android:padding="10sp"
            android:textSize="14sp"
            android:layout_marginBottom="5sp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/small_yellow_round_corner_bg"
            android:padding="10sp"
            android:hint="abcderfghijklmnopqrstuvwxyz"
            android:layout_marginBottom="10sp"
            android:textSize="14sp"
            android:singleLine="true"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Resume Key"
            android:background="@drawable/tab_select_bg"
            android:textColor="@color/white"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginRight="45sp"
            android:layout_marginLeft="45sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"/>





    </LinearLayout>

    </ScrollView>


</LinearLayout>