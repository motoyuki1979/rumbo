<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Savings_and_Expenses_Fragment"
    android:orientation="vertical"

    android:weightSum="1"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel_top_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="20sp"
        android:paddingBottom="20sp">



        <TextView
            android:id="@+id/tv_profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:text="もちりーな"
            android:layout_centerHorizontal="true"
            android:textColor="@color/tab_text_color"></TextView>










    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@drawable/small_yellow_round_corner_bg"
        android:layout_margin="10sp">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_gravity="center"
            android:layout_marginLeft="10sp"
            android:layout_weight="0.2"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/post_to_household_diagnostic"
            android:layout_gravity="center"
            android:textColor="@color/tab_text_color"
            android:layout_weight="0.4"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"/>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:paddingTop="7sp"
            android:paddingBottom="7sp"
            android:layout_height="wrap_content"
            android:text="@string/send"
           android:gravity="center"

            android:textColor="@color/white"
            android:background="@drawable/tab_select_bg"
            android:layout_weight="0.4"/>




    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24px"
        android:weightSum="1"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/family_composition"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tab_text_color"
            android:layout_weight="0.33"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:padding="5dp"
            android:layout_weight="0.67"
            android:textAlignment="textEnd"
            android:layout_gravity="end"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24px"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/current_saving_balance"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tab_text_color"
            android:layout_weight="0.33"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="円"
            android:background="@color/white"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:padding="5dp"
            android:layout_weight="0.67"
            android:textAlignment="textEnd"
            android:layout_gravity="end"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24px"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/annual_income"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tab_text_color"
            android:layout_weight="0.33"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="円"
            android:background="@color/white"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:padding="5dp"
            android:layout_weight="0.67"
            android:textAlignment="textEnd"
            android:layout_gravity="end"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24px"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/annual_expenditure"
            android:layout_marginLeft="10dp"
            android:textColor="@color/tab_text_color"
            android:layout_weight="0.33"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="円"
            android:background="@color/white"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:padding="5dp"
            android:layout_weight="0.67"
            android:textAlignment="textEnd"
            android:layout_gravity="end"/>
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/annual_savings_amount"
            android:layout_weight="1"
            android:textColor="@color/tab_text_color"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1,500,000円"
            android:layout_weight="1"
            android:textColor="@color/design_default_color_primary"/>
    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_worries_future_plans"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textColor="@color/tab_text_color"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="6"
        android:background="@color/white"
        android:layout_margin="10sp"
        android:hint="コメントを入力してください"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
         android:gravity="top"/>


    </LinearLayout>

</LinearLayout>