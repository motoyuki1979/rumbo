<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/heart_white_bg"
    android:padding="5sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:layout_marginTop="5sp"
    android:layout_marginBottom="5sp"
    app:cardCornerRadius="8sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_img_blocked"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@mipmap/image_dummy"
        android:layout_centerVertical="true"
        android:layout_margin="10sp"/>

    <LinearLayout
        android:id="@+id/lin_tab_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/civ_img_blocked">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLOCKED"
            android:background="@drawable/heart_white_bg"
            android:layout_weight="1"
            android:padding="5sp"
         android:textSize="14sp"
            android:layout_marginRight="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLOCKED"
            android:layout_weight="1"
            android:padding="5sp"
            android:background="@drawable/tab_select_bg"
            android:textColor="@color/white"
            android:gravity="center"
           android:layout_marginRight="10sp"
          android:textSize="14sp"/>


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/civ_img_blocked"
        android:layout_below="@+id/lin_tab_block"
        android:text="Blocked Blocked Blocked Blocked \nBlocked Blocked Blocked Blocked Blocked Blocked \nBlocked   "
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:padding="5sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
